@{
    Layout = "~/Areas/AdminGame/Views/Shared/_Layout.cshtml";
}


<div ng-app="myApp" ng-controller="myController" ng-init="onPageLoad()">
    <div class="container">
        <button type="button" style="margin-top:10px" class="btn btn-primary" data-toggle="modal" data-target="#user-modal">
            Yeni istifadəçi
        </button>
        <h2 class="my-4">İstifadəçilər</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" hidden></th>
                    <th scope="col">#</th>
                    <th scope="col">Ad</th>
                    <th scope="col">Soyad</th>
                    <th scope="col">Email ünvanı </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in userGrid">
                    <td hidden>{{item.id}}</td>
                    <td>{{$index+1}}</td>
                    <td>{{item.name}}</td>
                    <td>{{item.surname}}</td>
                    <td>{{item.email}}</td>
                    <td>
                        <button type="button" ng-click="readUser(item.id)" class="btn btn-primary btn-sm">Dəyiş</button>
                        <button type="button" ng-click="deleteUser(item.id)" class="btn btn-danger btn-sm">Sil</button>
                    </td>
                </tr>

            </tbody>
        </table>
        <input type="hidden" id="hiddenId" />
    </div>
    <!--Create User Modal-->
    <div class="modal fade" id="user-modal" tabindex="-1" role="dialog" aria-labelledby="user-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="user-modal-label">Yeni istifadəçi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- User creation form -->
                    <form>
                        <div class="form-group">
                            <label for="user-email" class="col-form-label">Email:</label>
                            <input type="email" ng-model="userEmail" class="form-control" id="user-email" required>
                        </div>
                        <div class="form-group">
                            <label for="user-surname" class="col-form-label">Soyad:</label>
                            <input type="text" ng-model="userSurname" class="form-control" id="user-surname" required>
                        </div>
                        <div class="form-group">
                            <label for="user-name" class="col-form-label">Ad:</label>
                            <input type="text" ng-model="userName" class="form-control" id="user-name" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ləğv</button>
                    <button ng-click="createUser()" ng-show="isAdd" type="button" class="btn btn-primary">Yadda saxla</button>
                    <button ng-click="updateUser()" ng-show="isUpdate" type="button" class="btn btn-primary">Yenilə</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Script/admin.js" asp-append-version="true"></script>
}